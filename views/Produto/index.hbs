<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index de Produto</title>
</head>

<body>
    <div class="container">
        <a href="#" class="btn btn-primary">Adicionar um novo Produto</a>
        <a href="/" class="btn btn-primary">Voltar</a>
        <table class="table hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tipo</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#each produtos}}
                <tr>
                    <th>{{this.id}}</th>
                    <td>{{this.TipoProduto_descricao}}</td>
                    <td>{{this.nome}}</td>
                    <td>{{this.preco}}</td>
                    <td>
                        <a href="#" class="btn btn-primary">Mostrar</a>
                        <a href="#" class="btn btn-secondary">Editar</a>
                        <a href="#" class="btn btn-danger">Remover</a>
                    </td>
                </tr>
                {{/each }}
            </tbody>
        </table>
    </div>

</html>